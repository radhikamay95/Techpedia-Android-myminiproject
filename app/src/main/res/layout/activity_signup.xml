<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:id="@+id/llSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editFirstName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:drawablePadding="16dp"
                android:hint="First Name"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:nextFocusForward="@+id/editLastName"
                android:paddingBottom="4dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editLastName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:gravity="right"
                android:hint="Last Name"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:nextFocusForward="@+id/editSignUpEmail"
                android:paddingBottom="7dp"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="14sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/editSignUpEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="24dp"
            android:drawablePadding="16dp"
            android:hint="Email"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:nextFocusForward="@+id/editMobileNumber"
            android:paddingBottom="4dp"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editMobileNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="24dp"
            android:drawablePadding="16dp"
            android:hint="Mobile Number"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="14"
            android:maxLines="1"
            android:nextFocusForward="@+id/editSignUpPassword"
            android:textSize="14sp"/>


        <EditText
            android:id="@+id/editSignUpPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="24dp"
            android:drawablePadding="16dp"
            android:hint="Password"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:maxLines="1"
            android:nextFocusForward="@+id/editSignUpConfirmPassword"
            android:paddingBottom="6dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editSignUpConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="24dp"
            android:drawablePadding="16dp"
            android:hint="Confirm Password"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingBottom="6dp"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:gravity="bottom"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/editDepartment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:drawablePadding="16dp"
                android:hint="Department Name"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:nextFocusForward="@+id/year"
                android:paddingBottom="4dp"
                android:textSize="14sp"/>

            <Spinner
                android:id="@+id/year"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:imeOptions="actionNext"
                android:nextFocusForward="@+id/collegename" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editcollegename"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:drawablePadding="16dp"
                android:hint="College Name"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:nextFocusForward="@+id/editstudentid"
                android:paddingBottom="4dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editstudentid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:drawablePadding="16dp"
                android:hint="Student ID"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:nextFocusForward="@+id/btnSignUp"
                android:paddingBottom="4dp"
                android:textSize="14sp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="260dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:text="Sign Up"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

    </LinearLayout>

</ScrollView>
